{% extends "../layout.njk" %}

{% block header %}
 {{ context.pageHeader }} 
{% endblock %}

{% block content %}
{% if data.notifications %}
<h2 class="uk-margin-small">Объявления</h2>
<div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-match uk-text-center" uk-grid>
    {% for notification in data.notifications %}
    <div>
        <div class="uk-card uk-card-small uk-card-default uk-card-body">
            <div class="uk-card-title">{{ notification.title }}</div>
            <div>{{ notification.date }}</div>
            <div>{{ notification.time }}</div>
        </div>
    </div>
    {% endfor %}
</div>
<hr>
{% endif %}
<div>
    {% for post in data.posts %}
    <article class="ho-article uk-margin-top">
        <h2 class="ho-article-title">{{ post.title }}</h2>
        <p class="uk-article-meta uk-text-right">Опубликовано {{ post.created.time.toISOString() }}</p>
        <p>{{ post.text }}</p>
        <hr>
    </article>
    {% endfor %}
</div>
{% if data.pagination.enabled %}
<ul class="uk-pagination" uk-margin>
    {% if data.pagination.previousRef %}
    <li><a href="{{ data.pagination.previousRef }}"><span uk-pagination-previous></span></a></li>
    {% else %}
    <li class="uk-disabled"><span><span uk-pagination-previous></span></span></li>
    {% endif %}
    <li class="uk-active"><span>{{ data.pagination.currentPage }}</span></li>
    {% if data.pagination.nextRef %}
    <li><a href="{{ data.pagination.nextRef }}"><span uk-pagination-next></span></a></li>
    {% else %}
    <li class="uk-disabled"><span><span uk-pagination-next></span></span></li>
    {% endif %}
</ul>
{% endif %}
{% endblock %}